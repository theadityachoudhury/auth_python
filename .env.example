# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
APP_NAME=Your App Name
APP_DESCRIPTION=Your FastAPI Application Description
APP_VERSION=1.0.0
APP_AUTHOR=Your Name
APP_LICENSE=MIT
APP_CONTACT=https://github.com/yourusername
APP_CONTACT_EMAIL=your-email@example.com

# =============================================================================
# ENVIRONMENT
# =============================================================================
ENVIRONMENT=development
DEBUG=true

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
HOST=127.0.0.1
PORT=8000
RELOAD=true

# =============================================================================
# SECURITY SETTINGS
# =============================================================================
SECRET_KEY=change-this-to-a-secure-random-string
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# =============================================================================
# CORS SETTINGS
# =============================================================================
ALLOW_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
ALLOW_CREDENTIALS=true
ALLOW_METHODS=GET,POST,PUT,DELETE,OPTIONS
ALLOW_HEADERS=*

# =============================================================================
# TRUSTED HOSTS
# =============================================================================
TRUSTED_HOSTS=localhost,127.0.0.1,*.localhost

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DATABASE_URL=sqlite:///./app.db
DATABASE_ECHO=false
DATABASE_POOL_SIZE=5
DATABASE_MAX_OVERFLOW=10
DATABASE_CHECK_SAME_THREAD=false

# For PostgreSQL:
# DATABASE_URL=postgresql://username:password@localhost:5432/database_name

# For MySQL:
# DATABASE_URL=mysql://username:password@localhost:3306/database_name

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
LOG_FILE=logs/app.log
LOG_ROTATION=1 day
LOG_RETENTION=7 days
LOG_COMPRESSION=true
LOG_BACKTRACE=true
LOG_COLOR=true
LOG_JSON=false
LOG_CONSOLE=true
LOG_FILE_SIZE=10485760
LOG_FILE_COUNT=5

# Exception Logging
LOG_EXCEPTION=true
LOG_EXCEPTION_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
LOG_EXCEPTION_FILE=logs/exception.log
LOG_EXCEPTION_ROTATION=1 day
LOG_EXCEPTION_RETENTION=7 days
LOG_EXCEPTION_COMPRESSION=true
LOG_EXCEPTION_BACKTRACE=true
LOG_EXCEPTION_COLOR=true
LOG_EXCEPTION_JSON=false
LOG_EXCEPTION_CONSOLE=true
LOG_EXCEPTION_FILE_SIZE=10485760
LOG_EXCEPTION_FILE_COUNT=5
LOG_EXCEPTION_LEVEL=ERROR

# =============================================================================
# AUTHENTICATION & AUTHORIZATION
# =============================================================================
JWT_SECRET_KEY=your-jwt-secret-key-here
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# =============================================================================
# EMAIL CONFIGURATION
# =============================================================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM_EMAIL=your-email@gmail.com
SMTP_FROM_NAME=Your App Name
SMTP_USE_TLS=true

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=
REDIS_DB=0

# =============================================================================
# RATE LIMITING
# =============================================================================
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=100
RATE_LIMIT_BURST=20

# =============================================================================
# EXTERNAL API KEYS
# =============================================================================
# GOOGLE_CLIENT_ID=your-google-client-id
# GOOGLE_CLIENT_SECRET=your-google-client-secret
# GITHUB_CLIENT_ID=your-github-client-id
# GITHUB_CLIENT_SECRET=your-github-client-secret

# =============================================================================
# MONITORING & OBSERVABILITY
# =============================================================================
SENTRY_DSN=
PROMETHEUS_ENABLED=false
METRICS_ENDPOINT=/metrics